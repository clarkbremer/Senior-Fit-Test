<% if user_signed_in? %>
  <% case current_user.role %>
  <% when 'resident' %>
    <h3>Welcome, Resident</h3>
  <% when 'assessor' %>
    <h3>Welcome, Assessor</h3>
  <% when 'admin' %>
    <h3>Welcome, Administrator</h3>
  <% end %>
<% else %>
  <h3>Welcome</h3>
<% end %>
<p><%= link_to 'Users:', users_path %> <%= User.count %> registered</p>
