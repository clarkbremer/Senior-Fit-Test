<% if user_signed_in? %>
  <% if current_user.is_assessor? %>
    <h3>Welcome, Assessor</h3>
  <% elsif current_user.is_admin? %>
    <h3>Welcome, Administrator</h3>
  <% else %>
    <h3>Welcome</h3>
  <% end %>
<% end %>
<% @users.each do |user| %>
  <p>name: <%= user.person.name %></p>
  <p><%= link_to "email: #{user.email}", user_path(user) %></p>
<% end %>
<p><%= link_to 'Users:', users_path %> </p>
<p><%= User.count %> registered</p>
