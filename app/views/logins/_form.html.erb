<%= render partial: "shared/errors", locals: {object: @login} %>

<%= form_for [@resident, login], url: resident_login_path do |f| %>
  <p>
    <%= f.label :email %>:
    <%= f.email_field :email %>
  </p>
  <p>
    <%= f.label :password %>:
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %>:
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit "Save Login", class: "btn btn-primary" %>
  </p>
  <p>
    <%= link_to 'Cancel', resident_path(@resident), class: "btn btn-primary"  %>
  </p>
<% end %>
