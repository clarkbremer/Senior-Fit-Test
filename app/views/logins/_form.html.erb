<%= render partial: "shared/errors", locals: {object: @login} %>

<%= form_for [@resident, login], url: resident_login_path do |f| %>
  <p>
    <b>Resident Email</b><br>
    <%= f.email_field :email %>
  </p>
  <p>
    <b>Password</b><br>
    <%= f.password_field :password %>
  </p>
  <p>
    <b>Verify Password</b><br>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  <p>
    <%= link_to 'Cancel', resident_path(@resident) %>
  </p>
<% end %>
